<configuration>

    <!-- File appender with dynamic name -->
    <appender name="SERVICE_LOG_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/transformation.log</file>
        <append>false</append> <!-- Overwrite on every run -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for your package -->
    <logger name="com.example" level="DEBUG" additivity="false">
        <appender-ref ref="SERVICE_LOG_FILE"/>
    </logger>

    <!-- Console appender (optional) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
